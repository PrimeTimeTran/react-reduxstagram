{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "generator-star-spacing": ["error", "after"],
    "new-cap": 1,
    "object-shorthand": ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "no-await-in-loop": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "semi": ["error", "never"]
  },
  "plugins": [
    "babel",
    "react"
  ]
}
